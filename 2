<script>
function bagi() {
      var txtFirstNumberValue = document.getElementById('A12').value;
      var result = 1 / parseInt(txtFirstNumberValue);
      if (!isNaN(result)) {
         document.getElementById('A21').value = result.toFixed(3);
      }
}
function bagi1() {
      var txtFirstNumberValue = document.getElementById('A13').value;
      var result = 1 / parseInt(txtFirstNumberValue);
      if (!isNaN(result)) {
         document.getElementById('A31').value = result.toFixed(3);
      }
}
function bagi2() {
      var txtFirstNumberValue = document.getElementById('A23').value;
      var result = 1 / parseInt(txtFirstNumberValue);
      if (!isNaN(result)) {
         document.getElementById('A32').value = result.toFixed(3);
      }
}
</script>

